@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AutoRepairCRM.Core.Models.Customer.CustomerInputModel

@{
    ViewBag.Title = "Add Customer";
    Layout = "_AdminLayout";
}

<div class="col-6 mx-auto">
    <h2>Add customer</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-area="Admin" asp-controller="Customer" asp-action="Add">
        <div class="form-group mt-3">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control">
            <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control">
            <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="email" class="form-control">
            <span asp-validation-for="@Model.Email" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Phone"></label>
            <input asp-for="@Model.Phone" class="form-control">
            <span asp-validation-for="@Model.Phone" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <select asp-for="@Model.CarId" class="form-select">
                <option value="-1" selected>Open this select menu</option>
                @foreach (var car in ViewBag.Cars)
                {
                    <option value="@car.Id">@car.Make - @car.Model : @car.Year</option>
                }
            </select>
        </div>
        <div class="text-center mt-4">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}