@model AutoRepairCRM.Core.Models.Car.CarDetailsModel

@{
    ViewBag.Title = "Details for car";
}

<h2>Details for: @Model.Make @Model.Model</h2>

@if (Model.Services.Any())
{
    <div class="d-flex justify-content-around">
    @foreach (var service in Model.Services)
    {
        <div class="card" style="width: 18rem">
            <h5 class="card-header">@service.ServiceType</h5>
            <div class="card-body">
                <p class="card-text">Date of start: @service.StartDate</p>
                <p class="card-text">State of service: @(service.ServiceState ? "Finished" : "In Progress")</p>
                @if (service.ServiceState)
                {
                    <p class="card-text">Date of end: @service.EndDate</p>
                    <p class="card-text">Price: @service.Price</p>
                }
            </div>
        </div>
    }
    </div>
}
else
{
    <h3 class="text-center">No services for that vehicle.</h3>
}
