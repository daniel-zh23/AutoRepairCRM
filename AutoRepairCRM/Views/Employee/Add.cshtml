@model AutoRepairCRM.Core.Models.Employee.EmployeeInputModel

@{
    Layout = "_AdminLayout";
}

<div class="col-6 mx-auto">
    <h2>@ViewBag.Title</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group mt-3">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control">
            <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control">
            <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Phone"></label>
            <input asp-for="@Model.Phone" class="form-control">
            <span asp-validation-for="@Model.Phone" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control">
            <span asp-validation-for="@Model.Email" class="small text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label asp-for="@Model.Salary"></label>
            <input asp-for="@Model.Salary" class="form-control">
            <span asp-validation-for="@Model.Salary" class="small text-danger"></span>
        </div>
        @if (!ViewBag.IsEdit)
        {
            <div class="form-group">
                <label asp-for="@Model.Roles">Assign roles</label>
                <select class="form-control" asp-for="@Model.Roles">
                    <option>Choose role...</option>
                    @foreach (var role in ViewBag.Roles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.Roles"></span>
            </div>
        }
        <div class="text-center mt-4">
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}