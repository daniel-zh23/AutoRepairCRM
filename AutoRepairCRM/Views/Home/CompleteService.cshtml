@model AutoRepairCRM.Core.Models.Services.ServiceCompleteModel

@{
    ViewBag.Title = "Finalize service";
    Layout = "_AdminLayout";
}

<h2>@ViewBag.Title</h2>
<div class="col-6 mx-auto">
    <h2>@ViewBag.Title</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="form-group mt-3">
            <label asp-for="@Model.Price"></label>
            <input type="number" asp-for="@Model.Price" class="form-control">
            <span asp-validation-for="@Model.Price" class="small text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <input type="submit" class="btn btn-primary" value="Complete"/>
        </div>
    </form>
</div>